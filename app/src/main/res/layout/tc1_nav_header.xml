<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tc1_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/st1_nav_bg"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/tc1_profile_portrait"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:contentDescription="Navigation header"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/no_portrait"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tc1_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试用户"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tc1_profile_school"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:text="华中农业大学"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tc1_profile_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教师"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/tc1_profile_narrow"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/st1_arrow_right_white_24dp" />
    </RelativeLayout>

</LinearLayout>
