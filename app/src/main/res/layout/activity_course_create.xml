<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseCreateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:layout_marginBottom="44dp"
                android:text="课堂创建"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/course_name_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="#FFB3B3B3">

                <EditText
                    android:id="@+id/et_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_create_course_name"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:hint="课程名称"
                    android:text=""
                    android:inputType="text"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_create_course_name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/credit_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="#FFB3B3B3">

                <EditText
                    android:id="@+id/et_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_create_credit"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:hint="学分"
                    android:text=""
                    android:inputType="text"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_create_credit" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/length_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="#FFB3B3B3"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/et_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_create_length"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:hint="学时"
                    android:text=""
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_create_length" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/class_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColorHint="#FFB3B3B3"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/et_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_create_class"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:hint="班级(多个班级间以;隔开)"
                    android:text=""
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:drawableLeft="@drawable/ic_create_class" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_soild"
                android:fontFamily="@font/calibri"
                android:text="创建课堂"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>




        </LinearLayout>


    </ScrollView>


</RelativeLayout>